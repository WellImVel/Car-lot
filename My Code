using System;
using System.Collections.Generic;
using System.Text;

namespace ParkingLotApp
{
    class Program
    {
        static List<string> parkingLot = new List<string>();

        static void Main(string[] args)
        {
            Console.OutputEncoding = Encoding.UTF8;
            Console.InputEncoding = Encoding.UTF8;
            Console.WriteLine("ðŸš— Welcome to the parking lot!");
            Console.WriteLine("ðŸ”¹ Available commands: add [Ð½Ð¾Ð¼ÐµÑ€ Ð°Ð²Ñ‚Ð¾], remove [Ð½Ð¾Ð¼ÐµÑ€ Ð°Ð²Ñ‚Ð¾], list, exit");

            while (true)
            {
                Console.Write("\nðŸ‘‰ Enter the command: ");
                string input = Console.ReadLine()?.Trim();

                if (string.IsNullOrEmpty(input)) 
                {
                    Console.WriteLine("âš  The command cannot be empty.");
                    continue;
                }

                string[] parts = input.Split(' ', 2);
                string command = parts[0].ToLower();
                string carNumber = parts.Length > 1 ? parts[1] : null;

                switch (command)
                {
                    case "add":
                        AddCar(carNumber);
                        break;
                    case "remove":
                        RemoveCar(carNumber);
                        break;
                    case "list":
                        ListCars();
                        break;
                    case "exit":
                        Console.WriteLine("ðŸ‘‹ Program shutdown.");
                        return;
                    default:
                        Console.WriteLine("âŒ Unknown command. Try again.");
                        break;
                }
            }
        }

        static void AddCar(string carNumber)
        {
            if (string.IsNullOrWhiteSpace(carNumber))
            {
                Console.WriteLine("âš  Enter the vehicle number.");
                return;
            }

            if (!parkingLot.Contains(carNumber))
            {
                parkingLot.Add(carNumber);
                Console.WriteLine($"âœ… Car {carNumber} added to the parking lot."); 
            }
            else
            {
                Console.WriteLine($"â„¹ Car {carNumber} is already in the parking lot."); 
            }
        }

        static void RemoveCar(string carNumber)
        {
            if (string.IsNullOrWhiteSpace(carNumber))
            {
                Console.WriteLine("âš  Enter the vehicle number.");
                return;
            }

            if (parkingLot.Remove(carNumber))
            {
                Console.WriteLine($"âœ… Car {carNumber} removed from parking lot."); 
            }
            else
            {
                Console.WriteLine($"âŒ Car {carNumber} is not in the parking lot.");
            }
        }

        static void ListCars()
        {
            if (parkingLot.Count > 0)
            {
                Console.WriteLine("\nðŸ“‹ List of cars in the parking lot:");
                foreach (string car in parkingLot)
                {
                    Console.WriteLine($"ðŸš˜ {car}");
                }
            }
            else
            {
                Console.WriteLine("â„¹ Empty parking.");
            }
        }
    }
}
